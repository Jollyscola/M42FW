    "target": "esNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
